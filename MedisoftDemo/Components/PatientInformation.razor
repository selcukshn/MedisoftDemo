<MudFileUpload T="IReadOnlyList<IBrowserFile>" AppendMultipleFiles="false">
    <ButtonTemplate>
        <MudButton HtmlTag="label" Variant="Variant.Filled" Color="Color.Primary"
            StartIcon="@Icons.Material.Filled.CloudUpload" for="@context">
            Medya Yükle
        </MudButton>
    </ButtonTemplate>
    <SelectedTemplate>
        @if (context != null)
        {
            <MudList>
                @foreach (var file in context)
                {
                    <MudListItem Icon="@Icons.Material.Filled.AttachFile">
                        @file.Name <code>@file.Size bytes</code>
                    </MudListItem>
                }
            </MudList>
        }
    </SelectedTemplate>
</MudFileUpload>

<MudTextField T="String" Label="Ad" />
<MudTextField T="String" Label="Soyad" />
<MudSelect T="String" Label="Cinsiyet" Variant="Variant.Outlined" AnchorOrigin="Origin.BottomCenter">
    <MudSelectItem T="String" Value="@("Erkek")" />
    <MudSelectItem T="String" Value="@("Kadın")" />
</MudSelect>
<MudAutocomplete T="string" Variant="Variant.Outlined" Label="Risk Durumu" />
<MudTextField T="String" Label="Hasta Durum Bilgisi" Variant="Variant.Outlined" class="form-control mt-4" Lines="3">
</MudTextField>
<MudTextField T="String" Label="Yapılan Müdahaleler" Variant="Variant.Outlined" class="form-control mt-4" Lines="3">
