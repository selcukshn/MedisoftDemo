<MudFileUpload T="IReadOnlyList<IBrowserFile>" FilesChanged="UploadFiles">
    <ButtonTemplate>
        <MudButton HtmlTag="label" Variant="Variant.Filled" Color="Color.Primary"
            StartIcon="@Icons.Material.Filled.CloudUpload" for="@context">
            Media Yükle
        </MudButton>
    </ButtonTemplate>
</MudFileUpload>
@if (files != null)
{
    <MudList>
        @foreach (var file in files)
        {
            <MudListItem Icon="@Icons.Material.Filled.AttachFile">
                @file.Name <code>@file.Size bytes</code>
            </MudListItem>
        }
    </MudList>
}
<MudTextField Required RequiredError="Boş Bırakılamaz" T="String" Label="Ad" />
 <MudTextField Required RequiredError="Boş Bırakılamaz" T="String" Label="Soyad" />
 <MudSelect Placeholder="Seçiniz" Required RequiredError="Boş Bırakılamaz" T="String" Label="Cinsiyet"
     Variant="Variant.Outlined" AnchorOrigin="Origin.BottomCenter">
     <MudSelectItem T="String" Value="@("Erkek")" />
     <MudSelectItem T="String" Value="@("Kadın")" />
 </MudSelect>
 <MudSelect Placeholder="Seçiniz" Required RequiredError="Boş Bırakılamaz" T="String" Label="Risk Durumu"
     Variant="Variant.Outlined" AnchorOrigin="Origin.BottomCenter">
     <MudSelectItem T="String" Value="@("Risk Yok")" />
     <MudSelectItem T="String" Value="@("Az Riskli")" />
     <MudSelectItem T="String" Value="@("Orta Riskli")" />
     <MudSelectItem T="String" Value="@("Yüksek Riskli")" />
 </MudSelect>
 <MudTextField Required RequiredError="Boş Bırakılamaz" T="String" Label="Hasta Durum Bilgisi" Variant="Variant.Outlined"
     class="form-control mt-4" Lines="3">
 </MudTextField>
 <MudTextField Required T="String" RequiredError="Boş Bırakılamaz" Label="Yapılan Müdahaleler" Variant="Variant.Outlined"
     class="form-control mt-4" Lines="3">
 </MudTextField>

 @code {

    IList<IBrowserFile> files = new List<IBrowserFile>();
    private void UploadFiles(IReadOnlyList<IBrowserFile> files)
    {
        foreach (var file in files)
        {
            this.files.Add(file);
        }
    }



}