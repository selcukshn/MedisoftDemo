<MudFileUpload T="IReadOnlyList<IBrowserFile>" AppendMultipleFiles="false">
    <ButtonTemplate>
        <MudButton HtmlTag="label" Variant="Variant.Filled" Color="Color.Primary"
            StartIcon="@Icons.Material.Filled.CloudUpload" for="@context">
            Medya Yükle
        </MudButton>
    </ButtonTemplate>
    <SelectedTemplate>
        @if (context != null)
        {
            <MudList>
                @foreach (var file in context)
                {
                    <MudListItem Icon="@Icons.Material.Filled.AttachFile">
                        @file.Name <code>@file.Size bytes</code>
                    </MudListItem>
                }
            </MudList>
        }
    </SelectedTemplate>
</MudFileUpload>


